{
  "name": "redux-fool",
  "version": "0.1.3",
  "description": "Simple utils and middlewares for Redux.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "lib",
    "es",
    "src"
  ],
  "keywords": [
    "redux-fool",
    "redux",
    "reducer",
    "tool",
    "redux-thunk",
    "redux-actions",
    "flux"
  ],
  "npmName": "redux-fool",
  "scripts": {
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es --ignore *.test.js",
    "build:commonjs": "babel --plugins add-module-exports src --out-dir lib --ignore *.test.js",
    "build": "npm run clean && npm run build:es && npm run build:commonjs",
    "clean": "rimraf lib es",
    "test:watch": "ava --verbose --watch",
    "test": "nyc ava --verbose",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ice-zjchen/redux-fool.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ice-zjchen/redux-fool/issues"
  },
  "homepage": "https://github.com/ice-zjchen/redux-fool#readme",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.1",
    "eslint": "^4.12.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.5.1",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "webpack": "^3.9.1"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-mock-store": "^1.3.0",
    "redux-thunk": "^2.2.0"
  },
  "ava": {
    "files": [
      "src/**/*.test.js"
    ],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "powerAssert": false,
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
